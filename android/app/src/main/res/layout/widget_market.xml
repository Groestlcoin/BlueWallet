<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_market"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market"
        android:textColor="@color/widget_text_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Next Block"
                android:textColor="@color/widget_text_color"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/next_block_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_pill_background"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="..."
                android:textColor="@color/widget_background_color"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="8dp">

            <TextView
                android:id="@+id/sats_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sats/USD"
                android:textColor="@color/widget_text_color"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sats_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_pill_background"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="..."
                android:textColor="@color/widget_background_color"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price"
                android:textColor="@color/widget_text_color"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_pill_background"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="..."
                android:textColor="@color/widget_background_color"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
